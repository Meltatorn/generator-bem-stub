{
  "author": "<%= author %>",
  "name": "<%= projectName %>",
  "email": "<%= email %>",
  "version": "0.0.0",
  "engines": {
    "node": ">=0.10"
  },
  "dependencies": {
<%= assemblerName === 'bem-tools' ? '    "bem": "0.9.0",\n    "bem-environ": "1.4.0"' :  '    "enb": "0.13.6"'%>
  },
  "devDependencies": {
<%= _.map(technologies.inJSON, function(technology) { return '    "' + technology.name + '": "' + technology.version + '"'}).join(',\n') + "," %>
    "bower": "1.3.9",
    "bower-npm-install": "0.5.9"
  },
  "scripts": {
    "postinstall": "bower-npm-install",
    "deps": "bower-npm-install --non-interactive"
  }
}
