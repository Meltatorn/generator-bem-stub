{
  "name": "<%= projectName %>",
  "description": "BEM project",
  "version": "0.0.0",
  "repository": {},
  "author": {
    "name": "<%= author %>",
    "email": "<%= email %>"
  },
  "dependencies": {},
  "devDependencies": {
<%= _.map(technologies.inJSON, function(technology) { return '    "' + technology.name + '": "' + technology.version + '"'}).join(',\n') %>
  },
  "scripts": {
    "postinstall": "npm run deps",
    "deps": "<%= assemblerName === 'bem-tools' ? 'bower-npm-install --non-interactive' : 'bower install --non-interactive' %>",
    "start": "<%= assemblerName === 'bem-tools' ? 'bem' : 'enb' %> server"
  },
  "engines": {
    "node": ">=0.10.0"
  }
}
